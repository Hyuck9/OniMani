<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lhg1304.onimani.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:weightSum="2">

        <Button
            android:id="@+id/btn_logout"
            android:layout_weight="1"
            android:layout_marginRight="4dp"
            android:background="@drawable/selector_button_logout"
            style="@style/button"
            android:text="@string/com_kakao_logout_button" />

        <Button
            android:id="@+id/btn_unlink"
            android:layout_weight="1"
            android:layout_marginLeft="4dp"
            android:background="@drawable/selector_button_unlink"
            style="@style/button"
            android:text="@string/com_kakao_unlink_button" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
